<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <TextView
        android:id="@+id/usr_name"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="35dip"
        android:gravity="center"
        android:textIsSelectable="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking for materials?"
        android:textSize="22dip"
        android:textColor="#D1262E"
        android:id="@+id/textView4"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:text="@string/term"
        android:id="@+id/textView"
        android:layout_above="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:gravity="center"
        android:textSize="22dip"
        android:layout_marginTop="10dp" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dialog"
        android:background="#25151515"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:gravity="center"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:text="@string/department"
        android:id="@+id/textView2"
        android:layout_above="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:gravity="center"
        android:textSize="22dip" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:clickable="true"
        android:background="#25151515"
        android:spinnerMode="dialog"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:gravity="center" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:text="@string/course"
        android:id="@+id/textView3"
        android:layout_above="@+id/spinner3"
        android:layout_alignLeft="@+id/spinner3"
        android:layout_alignStart="@+id/spinner3"
        android:gravity="center"
        android:textSize="22dip" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_above="@+id/button"
        android:spinnerMode="dialog"
        android:background="#25151515"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Find Materials"
        android:id="@+id/button"
        android:background="@drawable/button2"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/logoff"
        android:layout_alignLeft="@+id/logoff"
        android:layout_alignStart="@+id/logoff"
        android:layout_marginBottom="10dip" />
    <Button
        android:id="@+id/logoff"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Logout"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip" />

</RelativeLayout>
